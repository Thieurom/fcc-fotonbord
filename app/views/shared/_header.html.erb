<header class="header">
  <div class="header__inner">
    <a class="home-link" href="/">
      <div class="brand">
        <div class="brand__logo"></div>
        <div class="brand__name">
          <span>Foton</span>
          <span>Bord</span>
        </div>
      </div>
    </a>
    <nav class="nav">
      <% if logged_in? %>
        <div class="nav__item">
          <%= link_to '', user_path(current_user.nickname), class: 'account account--logged-in', style: 'background-image: url(' + current_user.image_url + ');' %>
        </div>
        <div class="nav__item">
          <button class="add-foton-btn"><i class="fa fa-plus"></i></button>
        </div>
      <% else %>
        <div class="nav__item">
          <button class="account account--not-logged-in"><i class="fa fa-user-o"></i></button>
        </div>
      <% end %>
    </nav>
  </div>
</header>
